<%- include('../partials/head') %>

<div class="page-header">
  <h1>My Categories</h1>
  <a href="/categories/new" class="btn btn-primary">+ New Category</a>
</div>

<% if (categories.length === 0) { %>
  <div class="empty-state">
    <p>No categories yet. <a href="/categories/new">Create your first category!</a></p>
  </div>
<% } else { %>
  <div class="category-grid">
    <% categories.forEach(category => { %>
      <div class="category-card" style="border-left: 4px solid <%= category.color %>">
        <div class="category-header">
          <div class="category-color" style="background-color: <%= category.color %>"></div>
          <a href="/categories/<%= category._id %>" class="category-name"><%= category.name %></a>
        </div>
        <p class="category-count"><%= category.taskCount %> task<%= category.taskCount !== 1 ? 's' : '' %></p>
        <div class="category-actions">
          <a href="/categories/<%= category._id %>/edit" class="btn btn-outline btn-sm">Edit</a>
          <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" class="inline-form" onsubmit="return confirm('Delete this category? Tasks will not be deleted, just uncategorized.')">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<%- include('../partials/footer') %>

